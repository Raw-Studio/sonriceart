<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
</head>

<body>
    <div class="album py-5 mt-5 bg-light">
        <div class="container">
            <a href="/admin/dashboard"><button type="button" class="btn btn-primary btn-lg mb-5">Back to
                Dashboard</button></a>
                <a href="/admin/artworks"><button type="button" class="btn btn-primary btn-lg mb-5">Back to
                    Artworks</button></a>
            <form method="POST" action="/admin/artworks/order/<%= album %>">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <% artworks.forEach(function(artwork){ %>
                    <div class="form-group row">
                        <input type="hidden" name="_id" value="<%= artwork._id %>"/>
                        <label for="order" class="col-sm-10 col-form-label"><%= artwork.title %></label>
                        <div class="col-sm-2">
                            <input type="number" class="form-control-plaintext" id="order"
                                value="<%= artwork.order %>" name="order">
                        </div>

                    </div>
                <% }) %>
                <div>
                    <button class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>